root = true

[*]
end_of_line = lf

[*.{py,json,jsonc,yml,yaml,txt,md}]
charset = utf-8

[*.txt]
trim_trailing_whitespace = true
insert_final_newline = false

[*.{json,jsonc,yml,yaml}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{py}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[news/**/translations/*.json]
indent_style = space
indent_size = 4
