{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "news"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "news": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "meta",
          "title",
          "content"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 0
          },
          "meta": {
            "$ref": "https://news.musicpresence.app/static/schemas/meta.schema.json"
          },
          "title": {
            "type": "object",
            "required": [
              "en"
            ],
            "propertyNames": {
              "$ref": "https://news.musicpresence.app/static/schemas/languages.schema.json"
            },
            "additionalProperties": {
              "type": "string",
              "minLength": 1
            }
          },
          "banner": {
            "type": "object",
            "required": [
              "en"
            ],
            "propertyNames": {
              "$ref": "https://news.musicpresence.app/static/schemas/languages.schema.json"
            },
            "additionalProperties": {
              "type": "string",
              "pattern": ".*image\\.png$"
            }
          },
          "content": {
            "type": "object",
            "required": [
              "en"
            ],
            "propertyNames": {
              "$ref": "https://news.musicpresence.app/static/schemas/languages.schema.json"
            },
            "additionalProperties": {
              "type": "string",
              "minLength": 1
            }
          },
          "buttons": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "label",
                "url",
                "aside"
              ],
              "properties": {
                "label": {
                  "type": "object",
                  "required": [
                    "en"
                  ],
                  "propertyNames": {
                    "$ref": "https://news.musicpresence.app/static/schemas/languages.schema.json"
                  },
                  "additionalProperties": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "url": {
                  "type": "string",
                  "format": "uri"
                },
                "aside": {
                  "type": "boolean"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  }
}